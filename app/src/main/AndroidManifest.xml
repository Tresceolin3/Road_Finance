<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roadfinance">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:name=".activity.helper.MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.activity.DespesasActivity"
            android:theme="@style/despesaTheme"></activity>
        <activity android:name=".activity.activity.ReceitasActivity"
            android:theme="@style/receitaTheme"/>
        <activity
            android:name=".activity.activity.CadastrarTruckActivity"
            android:theme="@style/receitaTheme"/>
        <activity
            android:name=".activity.activity.PrincipalActivity"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.activity.cadastrarTreeActivity" />
        <activity android:name=".activity.activity.cadastrarTwoActivity" />
        <activity android:name=".activity.activity.cadastrarActivity" />
        <activity android:name=".activity.activity.loginActivity" />
        <activity
            android:name=".activity.activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>